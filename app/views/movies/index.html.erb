<div class="container">
  <div class="notice"><%= notice %></div>
  <h1>Movies</h1>
  <table class="table table-striped">
    <thead>
      <th>Title</th>
      <th>Description</th>
      <th></th>
      <th></th>
      <th></th>
    </thead>
    <tbody>
      <% @movies.each do |movie| %>
        <tr>
          <td><%= link_to "#{movie.title}", movie_path(movie) %></td>
          <td><%= movie.description %></td>
          <td><%= link_to "Edit Moviefilm", edit_movie_path(movie) %></td>
          <td><%= link_to "Delete Moviefilm", movie_path(movie), method: :delete %></td>
        </tr>
    <% end %>
  </table>
  <br>
  <%= link_to "Add Moviefilm", new_movie_path %>
</div>
