              <%= link_to "Delete Review", movie_review_path(@movie, review), method: :delete %>
            <% end %>
          <% end %>
        </div>
      <% end %>
      </div>
    </div>
    <div class="row">
      <div class="span12">
        <%= render 'reviews/reviews_form' %>
        <%= link_to "Back", root_path %>
    </div>
  </div>
</div>
